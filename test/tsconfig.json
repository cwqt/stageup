{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": [ "es2020" ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./lib"],
    "baseUrl": ".",
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ]
}
