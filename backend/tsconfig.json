{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDirs": ["./lib", "../runner"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules", "test"]
}
